<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.dong.catdogMapper">

	<!-- 카테고리 1 리스트 -->
	<select id="product-1" resultType="ProductDTO">
		select *
		from product_group
		where product_category="1"
		order by product_regdate desc
	</select>

	<!-- 리스트에서 제품 선택 -->
	<select id="product_detail" parameterType="java.lang.Integer"
		resultType="BoardDTO">
		select *
		from product_group
		where product_group_id =
		#{product_group_id}
	</select>

	<!-- 찜 추가 -->
	<insert id="addWish" parameterType="WishDTO">
		insert into wish
		values
		(#{user_id}, #{product_group_id})
	</insert>

	<!-- 찜 제거 -->
	<delete id="deleteWish" parameterType="WishDTO">
		delete from wish
		where
		user_id=#{user_id} and product_groupid = #{product_group_id}
	</delete>
	
	
</mapper>